<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rubber.admin.core.mapper.SysMenuMapper">


    <resultMap type="com.rubber.admin.core.entity.SysMenu" id="baseMenuResult">
        <id property="menuId" column="menu_id"/>
        <result property="menuName" column="menu_name"/>
        <result property="parentId" column="parent_id"/>
        <result property="seq" column="seq"/>
        <result property="url" column="url"/>
        <result property="menuType" column="menu_type"/>
        <result property="authKey" column="auth_key"/>
        <result property="status" column="status"/>
        <result property="icon" column="icon"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="lastUpdateTime" column="last_update_time"/>
        <result property="lastUpdateBy" column="last_update_by"/>
        <result property="remark" column="remark"/>
    </resultMap>


    <sql id="selectMenu">
        select a.menu_id, a.menu_name, a.parent_id, a.seq, a.url, a.menu_type,a.auth_key, a.status, icon, a.create_by, a.create_time, a.last_update_time,a.last_update_by
		from sys_menu as a
    </sql>


    <select id="findByRoleId" resultMap="baseMenuResult">
        <include refid="selectMenu"/>
        left join sys_role_menu as rm on (a.menu_id = rm.menu_id)
        where rm.role_id = #{roleId}
    </select>


    <select id="findByUserId" resultMap="baseMenuResult">
        <include refid="selectMenu"/>
        left join sys_role_menu as rm on (a.menu_id = rm.menu_id)
        left join sys_user_role as ur on (rm.role_id = ur.role_id)
        where ur.user_id = #{userId}
    </select>


</mapper>
